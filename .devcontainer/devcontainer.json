{
  "name": "OpenSourceBikeShare Dev Environment",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "../docker-compose.override.yml"
  ],
  "service": "web",
  "workspaceFolder": "/var/www/html",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "MehediDracula.php-namespace-resolver",
        "neilbrayfield.php-docblocker",
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "formulahendry.auto-rename-tag",
        "ms-vscode.sublime-keybindings",
        "EditorConfig.EditorConfig",
        "ms-vscode.vscode-css-peek",
        "christian-kohler.path-intellisense",
        "ms-vscode.vscode-html-css-support",
        "recca0120.vscode-phpunit",
        "junstyle.php-cs-fixer",
        "getpsalm.psalm-vscode-plugin",
        "mikestead.dotenv",
        "ms-vscode.vscode-twig-language-2",
        "whatwedo.twig",
        "symfony-vscode.symfony-vscode"
      ],
      "settings": {
        "php.debug.executablePath": "/usr/local/bin/php",
        "php.executablePath": "/usr/local/bin/php",
        "php.validate.executablePath": "/usr/local/bin/php",
        "intelephense.environment.phpVersion": "8.1.0",
        "intelephense.files.maxSize": 5000000,
        "intelephense.environment.includePaths": [
          "/var/www/html/vendor"
        ],
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "php.suggest.basic": false,
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.associations": {
          "*.twig": "twig"
        },
        "emmet.includeLanguages": {
          "twig": "html"
        },
        "editor.quickSuggestions": {
          "strings": true
        },
        "php-cs-fixer.executablePath": "/var/www/html/vendor/bin/php-cs-fixer",
        "php-cs-fixer.config": "/var/www/html/.php-cs-fixer.dist.php",
        "phpunit.phpunit": "/var/www/html/vendor/bin/phpunit",
        "phpunit.args": [
          "--configuration",
          "/var/www/html/phpunit.xml"
        ],
        "files.eol": "\n"
      }
    }
  },
  "forwardPorts": [
    80,
    3306,
    81,
    8100
  ],
  "portsAttributes": {
    "80": {
      "label": "Nginx",
      "onAutoForward": "notify"
    },
    "8100": {
      "label": "Apache (Web)",
      "onAutoForward": "openBrowser"
    },
    "3306": {
      "label": "MySQL/MariaDB",
      "onAutoForward": "silent"
    },
    "81": {
      "label": "phpMyAdmin",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "composer install && chmod -R 777 var/ && chown -R www-data:www-data var/",
  "remoteUser": "root",
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer,target=/var/www/html/.devcontainer,type=bind,consistency=cached"
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  }
}